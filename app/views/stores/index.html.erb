<p style="color: green"><%= notice %></p>
<br>
<%= link_to 'New Store' ,new_store_path %>
<br><br>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>id</th>
    <th>Store Name</th>
    <th>Phone</th>
    <th>Status</th>
    <th colspan="3" style="text-align: center">Action</th>
  </tr>

  </thead>
  <tbody>
  <% if @stores %>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.id %></td>
        <td><%= store.store_name %></td>
        <td><%= store.phone %></td>
        <td><%= store.status %></td>
        <td><%= link_to 'show' ,store %></td>
        <td><%= link_to 'edit' ,edit_store_path(store) %></td>
        <td><%= button_to 'Destroy',store ,method: :delete ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "btn btn-danger ml-3" %> </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>