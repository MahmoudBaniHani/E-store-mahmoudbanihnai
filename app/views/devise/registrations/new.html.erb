<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
             class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-outline mb-4">
            <label class="form-label" for="form3Example3">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control form-control-lg",placeholder:"Enter a valid email address"%>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :first_name ,class:"form-label"%><br />
            <%= f.text_field :first_name ,class:"form-control form-control-lg",placeholder:"Enter First Name"%>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :last_name ,class:"form-label"%><br />
            <%= f.text_field :last_name ,class:"form-control form-control-lg",placeholder:"Last First Name"%>
          </div>
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example4">Password</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password",placeholder:"Enter Password",class:"form-control form-control-lg" %>
          </div>
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example4">Password</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Enter Password Confirmation",class:"form-control form-control-lg" %>
          </div>
          <div class="field">
            <%= f.label :role %>
            <%= f.select :role, User.roles.keys[1..2] %>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Sign up",class:"btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>