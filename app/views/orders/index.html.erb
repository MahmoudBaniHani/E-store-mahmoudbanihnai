<p style="color: green"><%= notice %></p>
<%= link_to "New order", new_order_path %>

<br><br>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>id</th>
    <th>status</th>
    <th>user</th>
    <th>subtotal</th>
    <th colspan="3" style="text-align: center">Action</th>
  </tr>

  </thead>
  <tbody>
  <% if @orders %>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= order.user_id %></td>
        <td><%= order.subtotal %></td>
        <td><%= link_to 'show' ,order %></td>
        <td><%= link_to 'edit' ,edit_order_path(order) %></td>
        <td><%= button_to 'Destroy',order ,method: :delete ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "btn btn-danger ml-3" %> </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>




