

<% @store.each do |store| %>
    <li><%= link_to store.store_name,product_of_owner_path(id:store) %></li>
  <% end %>

  <% if !@store.nil? %>
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th>id</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Production date</th>
        <th>Expiry date</th>
        <th>Quantity</th>
        <th>Image</th>
        <!--    <th>Category Name</th>-->
        <th>Store Name</th>
        <th colspan="3" style="text-align: center">Action</th>
      </tr>

      </thead>
      <tbody>
      <% if @products %>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.product_name %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= product.production_date %></td>
            <td><%= product.exp_date %></td>
            <td><%= product.quantity %></td>
            <td><%= image_tag(product.image ,width:"50", height:"50") if product.image.attached?  %></td>
            <td><%= product.store.store_name %></td>
            <!--        <td><%#= product.category_name %></td>-->
            <td><%= link_to 'show' ,product %></td>
            <td><%= link_to 'edit' ,edit_product_path(product) %></td>
            <td><%= button_to 'Destroy',product ,method: :delete ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "btn btn-danger ml-3" %> </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  <% end %>



