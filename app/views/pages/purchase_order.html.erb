<div class="container-fluid px-4">
    <div class="card mb-4">
          <div class="card-header">
            <i class="fas fa-table me-1"></i>
                Purchase Order
          </div>
          <div class="card-body">
                <table id="order_items_datatable" class="dataTable-table" >
                      <thead>
                          <tr style="border-color: inherit;border-style: solid;border-width: 0;">
                              <th>Id</th>
                              <th>order id</th>
                              <th>Email Customer</th>
                              <th>Product Name</th>
                              <th>Price Item</th>
                              <th>Quantity</th>
                              <th>Total</th>
                              <th>Store Name</th>
                          </tr>
                      </thead>
                </table>
          </div>
  </div>
</div>

<script type="text/javascript">
    jQuery('#order_items_datatable').dataTable({
        "processing": true,
        "serverSide": true,
        "ajax": {
            "url": $('#order_items_datatable').data('source')
        },
        "pagingType": "full_numbers",
        "columns": [
            {"data": "id"},
            {"data": "order_id"},
            {"data": "user_email"},
            {"data": "product_name"},
            {"data": "unit_price"},
            {"data": "quantity"},
            {"data": "total"},
            {"data": "store_name"},
        ]
    });
</script>