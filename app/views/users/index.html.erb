<p style="color: green"><%= notice %></p>
<br>
<%= link_to 'New User' ,new_user_url(@user) %>
<br><br>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>id</th>
    <th>Store Name</th>
    <th>Phone</th>
    <th>Status</th>
    <th colspan="3" style="text-align: center">Action</th>
  </tr>

  </thead>
  <tbody>
  <% if @users %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'show' ,show_user_path(user) %></td>
        <td><%= link_to 'edit' ,edit_user_path %></td>
        <td><%= button_to 'Destroy',user ,method: :delete ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "btn btn-danger ml-3" %> </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>