<p style="color: green"><%= notice %></p>
<br>
<%= link_to 'New User' ,new_user_path %>
<br><br>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>id</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Role</th>
    <th colspan="3" style="text-align: center">Action</th>
  </tr>

  </thead>
  <tbody>
  <% if @users %>
    <% @users.each do |row| %>
      <tr>
        <td><%= row.id %></td>
        <td><%= row.first_name %></td>
        <td><%= row.last_name %></td>
        <td><%= row.email %></td>
        <td><%= row.role %></td>
        <td><%= link_to 'show' ,user_path(row) %></td>
        <td><%= link_to 'Edit' ,edit_user_path(row.id) %></td>
        <td><%= button_to 'Destroy',row ,method: :delete ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "btn btn-danger ml-3" %> </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>